{% comment %}
  Renders a megamenu for the header.

  Usage:
  {% render 'header-mega-menu' %}
{% endcomment %}

<header-menu class="header__inline-menu">
  <details id="Details-HeaderMenu-Mega" class="mega-menu">
    <summary
      class="header__icon header__icon--menu header__icon--summary link focus-inset"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span>
        {{- 'icon-hamburger.svg' | inline_asset_content -}}
        {{- 'icon-close.svg' | inline_asset_content -}}
      </span>
    </summary>
    <div
      id="MegaMenu-Content-Mega"
      class="mega-menu__content color-{{ section.settings.menu_color_scheme }} gradient motion-reduce global-settings-popup"
      tabindex="-1"
    >
      <ul
        class="mega-menu__list page-width"
        style="grid-template-columns: repeat({{ section.settings.menu.links.size }}, minmax(0, 1fr));"
        role="list"
      >
        {%- for link in section.settings.menu.links -%}
          <li class="mega-menu__list__child">
            <a
              id="HeaderMenu-{{ link.handle }}"
              href="{{ link.url }}"
              class="mega-menu__link mega-menu__link--level-2 link{% if link.current %} mega-menu__link--active{% endif %}"
              {% if link.current %}
                aria-current="page"
              {% endif %}
            >
              {{ link.title | escape }}
            </a>
            {%- if link.links != blank -%}
              <ul class="list-unstyled mega-menu__list__child-of-child" role="list">
                {%- for childlink in link.links -%}
                  <li>
                    <a
                      id="HeaderMenu-{{ link.handle }}-{{ childlink.handle }}"
                      href="{{ childlink.url }}"
                      class="mega-menu__link link{% if childlink.current %} mega-menu__link--active{% endif %}"
                      {% if childlink.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ childlink.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </details>
</header-menu>
